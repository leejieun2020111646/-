#include <stdio.h>

void main() {
	int A[5][5]; //5x5의 2차원 배열 A 선언
	int R = 0, C = 0; //배열의 시작점(행,열)

	for (int N = 1; N <= 25; N++) {
			A[R][C] = N; //배열에 채울 원소 값 N(1~25)
		if (R + C < 4) { //행과 열의 합이 4 미만이라면(
			if (R == 0){ //0번째 행이라면(그림의 첫번째 칸)
				R = C + 1; //다음 행으로 감(행1)
				C = 0; //여전히 0번째 열
			}
			else { //대각선으로 우상향
				C = C + 1; //다음 열로 이동
				R = R - 1; //이전 행으로 이동
			}
		}
		
		else { //행과 열의 합이 4이상일 경우엔 마지막 행(4번째 행)에서 시작
			if (C == 4) { //4번째 행인 경우(가장 긴 대각선 처리)
				C = R + 1; 
				R = 4;
			}
			else { //대각선으로 우상향
				C = C + 1; //다음 열로 이동
				R = R - 1; //이전 행으로 이동
			}
		}
	}
	for (int i = 0; i < 5; i++) { //A[5][5] 배열 출력
		for (int j = 0; j < 5; j++) //i는 행, j는 열
			printf("%d\t", A[i][j]);
		printf("\n");
	}
	return 0;
}
