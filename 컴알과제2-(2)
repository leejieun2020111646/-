#include <stdio.h>
void main() {

	int A[5][5];
	A[0][0] = 1, A[4][4] = 25; 
	//대각선이 적용되는 부분에서의 규칙만 찾아서 맨 처음과 끝은 값을 할당하고 시작하였음 
	int R = 1, C = 0;//A[0][0]이 이미 채워 졌으므로 A[1][0]부터 시작
	int N = 2; //배열 A의 첫번째 값을 1로 이미 줬으므로 2부터 시작
	
	//서로 다른 길이의  대각선이 4종류 있으므로 범위를 다음과 같이 잡음
	for (int K = 1; K < 5; K++) 
	{
		A[R][C] = N++; //값을 넣은 후 증가될 수 있도록 후위증가연산자 사용
		for (int i = 0; i < K; i++) 
		{
			if (K % 2 != 0) //홀수번째 대각선일 경우 우상향함
			{
				R--;
				C++;
			}
			else  //짝수번째 대각선일 경우 좌하향함
			{
				R++;
				C--;
			}
			A[R][C] = N++; //원소를 넣어줌
		}
		if (K % 2 != 0) //우상향 대각선일 경우 우상향이 끝나고 오른쪽으로 한 칸 이동
			C++;
		else 
			R++; //좌하향 대각선일 경우 좌하향이 끝나고 아래로 한 칸 이동
	}
	if (R != 0) { //우상향
		R--; 
		C++;
	}
	else { //좌하향
		R++;
		C--;
	}
	for (int i = 3; i > 0; --i) //가장 긴 대각선 
	{
		A[R][C] = N++;
		for (int j = 0; j < i; ++j)
		{
			if (i % 2 != 0){
				R--;
				C++;
			}
			else{
				R++;
				C--;
			}
			A[R][C] = N++;
		}
		if (i % 2 != 0)
			R++; //위로 한 칸
		else
			C++; //오른쪽으로 한 칸
	}

	for (int i = 0; i < 5; ++i){ //배열 출력
		for (int j = 0; j < 5; ++j)
			printf("%d\t", A[i][j]);
		printf("\n");
	}
}
